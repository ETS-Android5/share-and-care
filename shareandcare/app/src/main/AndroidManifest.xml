<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shareandcare">

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <uses-feature
        android:name="android.hardware.camera.ar"
        android:required="true" />

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.ar.core"
            android:value="required"></meta-data>

        <activity android:name=".splashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".addListing"/>
        <activity android:name=".admin" />
        <activity android:name=".adminListing"/>
        <activity android:name="ar"/>
        <activity android:name=".confirmed"/>
        <activity android:name=".listing"/>
        <activity android:name=".listingHelper"/>
        <activity android:name=".listings"/>
        <activity android:name=".loginDatabaseHelper"/>
        <activity android:name=".mainActivity"/>
        <activity android:name=".registerAccount"/>

    </application>
</manifest>